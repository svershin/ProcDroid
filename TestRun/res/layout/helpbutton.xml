<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

	<RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent" >
	
	    <TextView
	        android:id="@+id/textView1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:layout_alignParentTop="true"
	        android:text="@string/helpProcButtons"
	        android:textColor="#FFFFFF" />
	
	    <ImageButton
	        android:id="@+id/imageButton1"
	        android:layout_width="45dp"
	        android:layout_height="45dp"
	        android:layout_alignParentLeft="true"
	        android:layout_below="@+id/textView1"
	        android:src="@drawable/ic_menu_proc_info" />
	
	    <ImageButton
	        android:id="@+id/imageButton2"
	        android:layout_width="45dp"
	        android:layout_height="45dp"
	        android:layout_alignParentLeft="true"
	        android:layout_below="@+id/imageButton1"
	        android:src="@drawable/ic_menu_proc_kill" />
	
	    <ImageButton
	        android:id="@+id/imageButton3"
	        android:layout_width="45dp"
	        android:layout_height="45dp"
	        android:layout_alignParentLeft="true"
	        android:layout_below="@+id/imageButton2"
	        android:src="@drawable/ic_menu_proc_fkill" />
	
	    <TextView
	        android:id="@+id/textView2"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignBottom="@+id/imageButton1"
	        android:layout_marginBottom="11dp"
	        android:layout_marginLeft="10dp"
	        android:layout_toRightOf="@+id/imageButton1"
	        android:text="@string/helpAppSettings"
	        android:textColor="#FFFFFF" />
	
	    <TextView
	        android:id="@+id/textView3"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignBottom="@+id/imageButton2"
	        android:layout_marginBottom="11dp"
	        android:layout_marginLeft="10dp"
	        android:layout_toRightOf="@+id/imageButton2"
	        android:text="@string/helpKill"
	        android:textColor="#FFFFFF" />
	
	    <TextView
	        android:id="@+id/textView4"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignBottom="@+id/imageButton3"
	        android:layout_marginBottom="11dp"
	        android:layout_marginLeft="10dp"
	        android:layout_toRightOf="@+id/imageButton3"
	        android:text="@string/helpFKill"
	        android:textColor="#FFFFFF" />
	    
	    <TextView
	        android:id="@+id/textView5"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:layout_below="@+id/imageButton3"
	        android:text="@string/helpAppButtons"
	        android:textColor="#FFFFFF" />
	
	    <ImageButton
	        android:id="@+id/imageButton6"
	        android:layout_width="45dp"
	        android:layout_height="45dp"
	        android:layout_alignParentLeft="true"
	        android:layout_below="@+id/textView5"
	        android:src="@drawable/ic_menu_refresh" />
	    
	    <ImageButton
	        android:id="@+id/imageButton4"
	        android:layout_width="45dp"
	        android:layout_height="45dp"
	        android:layout_alignParentLeft="true"
	        android:layout_below="@+id/imageButton6"
	        android:src="@drawable/ic_menu_about" />
	
	    <ImageButton
	        android:id="@+id/imageButton5"
	        android:layout_width="45dp"
	        android:layout_height="45dp"
	        android:layout_alignParentLeft="true"
	        android:layout_below="@+id/imageButton4"
	        android:src="@drawable/ic_menu_help" />
	
	    <TextView
	        android:id="@+id/textView9"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignBottom="@+id/imageButton6"
	        android:layout_marginBottom="11dp"
	        android:layout_marginLeft="10dp"
	        android:layout_toRightOf="@+id/imageButton6"
	        android:text="@string/helpAppRefresh"
	        android:textColor="#FFFFFF" />
	    
	    <TextView
	        android:id="@+id/textView7"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignBottom="@+id/imageButton4"
	        android:layout_marginBottom="11dp"
	        android:layout_marginLeft="10dp"
	        android:layout_toRightOf="@+id/imageButton4"
	        android:text="@string/helpAppAbout"
	        android:textColor="#FFFFFF" />
	
	    <TextView
	        android:id="@+id/textView8"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignBottom="@+id/imageButton5"
	        android:layout_marginBottom="11dp"
	        android:layout_marginLeft="10dp"
	        android:layout_toRightOf="@+id/imageButton5"
	        android:text="@string/helpAppHelp"
	        android:textColor="#FFFFFF" />
	
	</RelativeLayout>

</ScrollView>