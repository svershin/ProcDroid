<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff" >
    
    <TextView 
        android:id="@+id/label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/infoButton"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:text="@+id/label"
        android:maxLines="1"/>
    
    <ImageButton 
        android:id="@+id/infoButton"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/killButton"
        android:layout_margin="2dp"
        android:src="@drawable/ic_menu_proc_info"
        android:onClick="infoClicked" />
    
    <ImageButton 
        android:id="@+id/killButton"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/fkillButton"
        android:layout_margin="2dp"
        android:src="@drawable/ic_menu_proc_kill"
        android:onClick="killClicked" />
    
    <ImageButton 
        android:id="@+id/fkillButton"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_margin="2dp"
        android:src="@drawable/ic_menu_proc_fkill"
        android:onClick="fkillClicked" />

</RelativeLayout>