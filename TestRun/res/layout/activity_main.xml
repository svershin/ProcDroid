<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsActivity" >

    <RelativeLayout
        android:id="@+id/topButtons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" >
        
        <Button 
	        android:id="@+id/appsProcsButton"
	        android:layout_width="wrap_content"
	        android:layout_height="45dp"
	        android:layout_alignParentTop="true"
	        android:layout_alignParentLeft="true"
	        android:layout_margin="2dp"
	        android:text="@string/appButtonLabel" />
        
        <ImageButton 
	        android:id="@+id/appSettingsButton"
	        android:layout_width="45dp"
	        android:layout_height="45dp"
	        android:layout_alignParentTop="true"
	        android:layout_toLeftOf="@+id/appAboutButton"
	        android:layout_margin="2dp"
	        android:src="@drawable/ic_menu_app_settings"
	        android:onClick="appSettings" />
	    
	    <ImageButton 
	        android:id="@+id/appAboutButton"
	        android:layout_width="45dp"
	        android:layout_height="45dp"
	        android:layout_alignParentTop="true"
	        android:layout_toLeftOf="@+id/appHelpButton"
	        android:layout_margin="2dp"
	        android:src="@drawable/ic_menu_about"
	        android:onClick="appAbout" />
	    
	    <ImageButton 
	        android:id="@+id/appHelpButton"
	        android:layout_width="45dp"
	        android:layout_height="45dp"
	        android:layout_alignParentTop="true"
	        android:layout_alignParentRight="true"
	        android:layout_margin="2dp"
	        android:src="@drawable/ic_menu_help"
	        android:onClick="appHelp" />
	    
    </RelativeLayout>
    
    <ListView
        android:id="@+id/pList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/topButtons"
        android:drawSelectorOnTop="true" >

    </ListView>

</RelativeLayout>