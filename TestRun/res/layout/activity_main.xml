<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsActivity" >
 
       <ImageButton 
        android:id="@+id/appSettingsButton"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/appAboutButton"
        android:layout_margin="2dp"
        android:src="@drawable/ic_menu_app_settings"
        android:onClick="appSettings" />
    
    <ImageButton
        android:id="@+id/appHelpButton"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentTop="true"
        android:layout_margin="2dp"
        android:layout_toRightOf="@+id/appAboutButton"
        android:onClick="appHelp"
        android:src="@drawable/ic_menu_help" />

    <ImageButton
        android:id="@+id/appAboutButton"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="2dp"
        android:onClick="appAbout"
        android:src="@drawable/ic_menu_about" />
    
    <ListView
        android:id="@+id/pList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/appSettingsButton"
        android:drawSelectorOnTop="true" >

    </ListView>

</RelativeLayout>